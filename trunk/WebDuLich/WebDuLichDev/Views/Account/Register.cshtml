@model WebDuLichDev.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<body>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>
@using (Html.BeginForm("Register","Account",FormMethod.Post,new{ @class = "form-register" }) ) {
    @Html.AntiForgeryToken()
    
     if (!ViewData.ModelState.IsValid)
        { 
         <div id="messageBox" class="alert ">
            <a class="close" data-dismiss="alert">×</a>
             <p>@Html.ValidationSummary() </p>                  
        </div>
        }
    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                <label class="control-label" for="input01">@Resources.Language.Username</label>
                @Html.TextBoxFor(m => m.UserName, new { @class="input-xlarge",placeholder=@Resources.Language.Username})
            </li>
            <li>
                <label class="control-label" for="input01">@Resources.Language.Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "input-xlarge" })
            </li>
            <li>
                <label class="control-label" for="input01">@Resources.Language.ConfirmPassword</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-xlarge" })
            </li>
            <li>
                <input type="submit" value="Register" class="btn btn-large btn-primary"/>
            </li>
        </ol>
        
    </fieldset>
}
    
</body>