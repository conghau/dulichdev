@model WebDuLichDev.Models.ManagerUserRole
@{
   
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="bcgpanels">
    <h3>RoleName:@ViewBag.RoleName</h3>
    <div id="panels">
        <div style="width: 380px;vertical-align: top;">
            @using (Html.BeginForm("AddUser", "ManagerUserRole", FormMethod.Post, new { id = "frmAddUser" }))
            {
                <input name="roleId" value="@ViewBag.RoleId" type="hidden"/>
                <table class="table table-striped table-bordered table-condensed">
                    <caption>User Not In Role</caption>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                    </tr>
                    @foreach (var item in Model.listUserProfileNotInRole)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="UserID" value="@item.UserId"/></td>
                            <td>
                                <label>@item.UserName</label></td>
                        </tr>
                    }
                </table> 
            }
        </div>
        <div id="commands">
            <div><a href="#" id="btnAddUser" class="k-button">&gt;</a></div>
            <div><a href="#" id="btnDelUser" class="k-button">&lt;</a></div>
        </div>
        <div style="width: 380px;vertical-align: top;">
            @using (Html.BeginForm("DelUser", "ManagerUserRole", FormMethod.Post, new { id = "frmDelUser" }))
            {
                <input name="roleId" value="@ViewBag.RoleId" type="hidden"/>
                <table class="table table-striped table-bordered table-condensed">
                    <caption>User In Role</caption>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                    </tr>
                    @foreach (var item in Model.listUserProfile)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="UserID" value="@item.UserId"/></td>
                            <td>
                                <label>@item.UserName</label></td>
                        </tr>
                    }
                </table> 
            }
        </div>

    </div>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnAddUser').click(function () {

                $('#frmAddUser').submit();
            });

            $('#btnDelUser').click(function () {

                $('#frmDelUser').submit();
            });
            $("tr").click(function () {
                $(this).addClass("selected").siblings().removeClass("selected");
            });
        });
    </script>
</div>
